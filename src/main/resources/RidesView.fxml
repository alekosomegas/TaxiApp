            </HBox>
            <ScrollPane maxWidth="1.7976931348623157E308" minWidth="800.0" prefWidth="850.0">
               <content>
                  <TableView fx:id="ridesTable" onMouseClicked="#selectRide">
                    <columns>
                      <TableColumn fx:id="ridesIdCol" maxWidth="1.7976931348623157E308" prefWidth="25.33334308862686" text="id" />
                      <TableColumn fx:id="ridesDateCol" maxWidth="1.7976931348623157E308" prefWidth="69.33331871032715" text="Date" />
