                        <TableColumn fx:id="ridesTotalCol" maxWidth="1.7976931348623157E308" prefWidth="50.0" text="Total" />
                        <TableColumn fx:id="ridesDriverIdCol" maxWidth="1.7976931348623157E308" prefWidth="30.0" text="IdD" />
                        <TableColumn fx:id="ridesDriverCol" maxWidth="1.7976931348623157E308" prefWidth="50.0" text="Driver" />
                        <TableColumn fx:id="ridesCarIdCol" maxWidth="1.7976931348623157E308" prefWidth="50.0" text="IdCar" />
                        <TableColumn fx:id="ridesCarCol" maxWidth="1.7976931348623157E308" prefWidth="50.0" text="Car" />
