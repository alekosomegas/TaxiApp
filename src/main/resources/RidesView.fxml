                  <TableColumn fx:id="ridesDriverCol" prefWidth="66.22216796875" text="Driver" />
                  <TableColumn fx:id="ridesCarIdCol" prefWidth="66.22216796875" text="Car ID" />
                  <TableColumn fx:id="ridesCarCol" prefWidth="66.22216796875" text="Car" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
