                        <TableColumn fx:id="ridesStopsCol" maxWidth="1.7976931348623157E308" text="Stops" />
                        <TableColumn fx:id="ridesToCol" maxWidth="1.7976931348623157E308" text="To" />
                        <TableColumn fx:id="ridesCashCol" maxWidth="1.7976931348623157E308" prefWidth="50.0" text="Cash" />
