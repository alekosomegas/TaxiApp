<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane maxWidth="1500.0" minWidth="500.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ak.taxiapp.controller.RidesViewController">
   <children>
      <VBox spacing="5.0">
         <children>
            <HBox spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onNewRideClicked" prefHeight="35.0" prefWidth="120.0" text="New Ride" />
                  <Button mnemonicParsing="false" onAction="#deleteSelectedRide" prefHeight="35.0" prefWidth="120.0" text="Delete Ride" />
                  <Button mnemonicParsing="false" onAction="#onEditClicked" prefHeight="35.0" prefWidth="120.0" text="Edit Ride" />
               </children>
            </HBox>
            <ScrollPane>
               <content>
                  <TableView fx:id="ridesTable" onMouseClicked="#selectRide">
                    <columns>
                      <TableColumn fx:id="ridesIdCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="id" />
                      <TableColumn fx:id="ridesDateCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Date" />
                        <TableColumn fx:id="ridesStartCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Time Start" />
                        <TableColumn fx:id="ridesEndCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Time End" />
                        <TableColumn fx:id="ridesPassengerCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Passenger" />
                        <TableColumn fx:id="ridesClientIdCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="IdC" />
                        <TableColumn fx:id="ridesClientCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Client" />
                        <TableColumn fx:id="ridesFromCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="From" />
                        <TableColumn fx:id="ridesStopsCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Stops" />
                        <TableColumn fx:id="ridesToCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="To" />
                        <TableColumn fx:id="ridesCashCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Cash" />
                        <TableColumn fx:id="ridesCreditCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Credit" />
                        <TableColumn fx:id="ridesTotalCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Total" />
                        <TableColumn fx:id="ridesDriverIdCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="IdD" />
                        <TableColumn fx:id="ridesDriverCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Driver" />
                        <TableColumn fx:id="ridesCarIdCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="IdCar" />
                        <TableColumn fx:id="ridesCarCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Car" />
                        <TableColumn fx:id="ridesNotesCol" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="Notes" />
                    </columns>
                  </TableView>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
