            <Rectangle fx:id="recStatus" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="75.0" stroke="BLACK" strokeType="INSIDE" width="60.0" />
            <Label fx:id="lblStatus" styleClass="text--table" text="Status" wrapText="true" />
         </children>
      </StackPane>
      <HBox alignment="CENTER" maxHeight="90.0" minHeight="90.0" prefHeight="90.0">
         <children>
            <Label fx:id="lblId" alignment="CENTER" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" styleClass="text--table" text="Id" />
         </children>
      </HBox>
      <VBox alignment="CENTER_LEFT" maxHeight="80.0" maxWidth="180.0" minHeight="80.0" minWidth="180.0" prefHeight="80.0" prefWidth="180.0">
         <children>
            <Label fx:id="lblClient" styleClass="text--table" text="Client" />
            <Label fx:id="lblEmail" styleClass="text--table" text="Email" />
            <Label fx:id="lblTel" layoutX="10.0" layoutY="50.0" styleClass="text--table" text="Tel" />
         </children>
      </VBox>
      <VBox alignment="CENTER_LEFT" maxHeight="80.0" maxWidth="180.0" minHeight="80.0" minWidth="180.0" prefHeight="80.0" prefWidth="180.0">
         <children>
            <Label layoutX="10.0" layoutY="25.0" styleClass="small-text" text="Date of Issue:" />
            <Label fx:id="lblDate" styleClass="text--table" text="Date" />
            <Label layoutX="10.0" layoutY="38.0" styleClass="small-text" text="Period:" />
            <Label fx:id="lblRange" styleClass="text--table" text="Range" />
         </children>
      </VBox>
      <VBox alignment="CENTER_LEFT" layoutX="770.0" layoutY="15.0" maxHeight="80.0" maxWidth="100.0" minHeight="80.0" minWidth="100.0" prefHeight="80.0" prefWidth="100.0">
         <children>
            <Label layoutX="10.0" layoutY="22.0" styleClass="small-text" text="SubTotal:" />
            <Label fx:id="lblTotal" styleClass="text--table" text="Total" />
            <Label layoutX="10.0" layoutY="38.0" styleClass="small-text" text="VAT:" />
            <Label fx:id="lblVAT" styleClass="text--table" text="VAT" />
         </children>
      </VBox>
      <HBox maxHeight="80.0" minHeight="80.0" prefHeight="80.0" prefWidth="250.0">
         <children>
            <Label fx:id="lblNotes" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" styleClass="text--table" text="Notes" />
         </children>
      </HBox>
      <Pane maxHeight="80.0" maxWidth="20.0" minHeight="80.0" minWidth="20.0" prefHeight="80.0" prefWidth="20.0" />
      <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" prefWidth="128.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="64.6666259765625" minWidth="10.0" prefWidth="42.000003814697266" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="80.0" minWidth="10.0" prefWidth="50.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onEdit" prefHeight="32.0" prefWidth="32.0" styleClass="tertiary_button">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icons/baseline-create-24px.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Label onMouseClicked="#onEdit" styleClass="text--action" text="EDIT /    VIEW" wrapText="true" GridPane.columnIndex="1" />
            <Label onMouseClicked="#onPrint" styleClass="text--action" text="CLOSE &amp; PRINT" textFill="#d600fc" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button mnemonicParsing="false" onAction="#onPrint" styleClass="tertiary_button" GridPane.rowIndex="1">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icons/baseline-print-24px.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
