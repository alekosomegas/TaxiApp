<HBox fx:id="hbRowContainer" alignment="CENTER_LEFT" maxHeight="90.0" maxWidth="1050.0" minHeight="90.0" minWidth="1050.0" prefHeight="90.0" prefWidth="1050.0" spacing="10.0" style="-fx-border-color: white; -fx-border-width: 0 0 2 0;" styleClass="row" stylesheets="@../../style/stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane maxHeight="80.0" minHeight="80.0" prefHeight="80.0">
