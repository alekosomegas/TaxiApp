<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ak.taxiapp.controller.invoice.InvoiceViewController">
   <children>
      <VBox minWidth="800.0" prefWidth="850.0" spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ScrollPane prefWidth="1000.0">
               <content>
                  <TableView fx:id="tvInvoiceTable" editable="true" minWidth="300.0" prefWidth="800.0">
                     <columns>
                        <TableColumn fx:id="tcInvoiceId" prefWidth="100.0" text="Id" />
                        <TableColumn fx:id="tcInvoiceDate" prefWidth="75.0" text="Date" />
                        <TableColumn fx:id="tcInvoiceClient" prefWidth="100.0" text="Client" />
                        <TableColumn fx:id="tcInvoiceTotal" prefWidth="150.0" text="Total" />
                        <TableColumn prefWidth="150.0" text="Issued wip" />
                        <TableColumn prefWidth="75.0" text="Paid wip" />
                        <TableColumn prefWidth="250.0" text="Notes wip" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
