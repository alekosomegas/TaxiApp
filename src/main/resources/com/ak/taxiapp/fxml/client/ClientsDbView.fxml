<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxWidth="1100.0" minWidth="1100.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ak.taxiapp.controller.client.ClientDbController">
   <children>
      <VBox maxWidth="1100.0" minWidth="1100.0" prefWidth="1100.0" spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <HBox prefWidth="1100.0" spacing="5.0">
               <children>
                  <Button fx:id="addClientBtn" mnemonicParsing="false" onAction="#insert" prefHeight="35.0" prefWidth="120.0" text="New Client" />
                  <Button fx:id="deleteClientBtn" mnemonicParsing="false" onAction="#deleteSelectedClient" prefHeight="35.0" prefWidth="120.0" text="Delete Client" />
                  <Button mnemonicParsing="false" onAction="#onEditClicked" prefHeight="35.0" prefWidth="120.0" text="Edit Client" />
               </children>
            </HBox>
            <TableView fx:id="clientsTable" maxWidth="1100.0" minWidth="1100.0" onMouseClicked="#selectClient" prefHeight="600.0" prefWidth="1100.0">
               <columns>
                  <TableColumn fx:id="clientIDCol" prefWidth="28.0" text="Id" />
                  <TableColumn fx:id="clientNameCol" prefWidth="150.0" text="Name" />
                  <TableColumn fx:id="clientAddressCol" prefWidth="150.0" text="Address" />
                  <TableColumn fx:id="clientEmailCol" prefWidth="150.0" text="Email" />
                  <TableColumn fx:id="clientTelCol" prefWidth="150.0" text="Tel" />
                  <TableColumn prefWidth="465.0" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</AnchorPane>
