<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefWidth="850.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ak.taxiapp.controller.CarsViewController">
   <children>
      <VBox prefWidth="850.0" spacing="5.0">
         <children>
            <HBox prefWidth="850.0" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" text="New Car"  onAction="#onNewCarClicked"/>
                  <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" text="Delete Car" onAction="#deleteSelectedCar" />
                  <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" text="Edit Car" onAction="#onEditCarClicked" />
               </children>
            </HBox>
            <TableView fx:id="carsTable" prefWidth="850.0" onMouseClicked="#selectCar">
              <columns>
                <TableColumn fx:id="carsIdCol" prefWidth="35.0" text="Id" />
                <TableColumn fx:id="carsRegCol" prefWidth="244.44445037841797" text="Registration" />
                  <TableColumn fx:id="carsMakeCol" prefWidth="204.88894653320312" text="Make" />
                  <TableColumn fx:id="carsModelCol" prefWidth="160.0" text="Model" />
                  <TableColumn fx:id="carsMilCol" minWidth="2.6666259765625" prefWidth="103.111083984375" text="Milage" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
